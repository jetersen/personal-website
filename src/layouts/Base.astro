---
import Nav from '../components/Nav.astro';
import css from '../styles/global.css?url';
import { getCollection } from 'astro:content';
import faviconSvg from '../icons/favicon.svg';
import { SITE_NAME, ROLE, COMPANY } from '../consts';

interface Props {
  title: string;
  description?: string;
  wide?: boolean;
}

const { title, description = `${SITE_NAME} â€” ${ROLE} at ${COMPANY}`, wide = false } = Astro.props;

const hasBlog = (await getCollection('blog'))
  .some((post) => import.meta.env.PROD ? !post.data.draft : true);
---

<>
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="icon" href={faviconSvg.src} type="image/svg+xml" />
    <link rel="stylesheet" href={css} />
  </head>
  <body>
    <div class="accent-bar"></div>
    <div class:list={["page-wrapper", { "page-wrapper--wide": wide }]}>
      <Nav hasBlog={hasBlog} />
      <main>
        <slot />
      </main>
    </div>
  </body>
</html>
</>
